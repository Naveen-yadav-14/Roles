<script>
    function showToast(type, message) {
        const toast = document.querySelector(`.toast.${type}`);
        const toastMessage = toast.querySelector('.toast-message');
        toastMessage.textContent = message;  // Set dynamic message
        toast.style.display = 'flex';
        toast.style.opacity = '1';
        setTimeout(() => {
            toast.style.opacity = '0';
            setTimeout(() => {
                toast.style.display = 'none';
            }, 300); // Match the time with fadeOut animation duration
        }, 3000); // Display duration of the toast
    }

    function closeToast(element) {
        const toast = element.parentElement;
        toast.style.opacity = "0";
        setTimeout(() => {
            toast.style.display = "none";
        }, 300);
    }

    document.addEventListener('DOMContentLoaded', () => {
        // Check if there is a success message
        const successMessage = '{{success}}';
        if (successMessage) {
            showToast('success', successMessage); // Show success toast with dynamic message
        }

        // Check if there is an error message
        const errorMessage = '{{error}}';
        if (errorMessage) {
            showToast('error', errorMessage); // Show error toast with dynamic message
        }
    });
</script>

