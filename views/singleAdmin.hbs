{{>headers}}
<title>Admin Profile</title>
<section class="content">
    <div class="container-fluid">
        <div class="row pb-2 pr-2 pl-2">
            <div class="col-md-12">
                <div class="card card-primary card-outline mt-3">
                    <div class="card-header" style="background-color: #4A3AFF; color:white;">
                        <h4><b style="color: white !important"></b></h4>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="alert-success">{{success}}</div>
                <div class="alert-danger">{{error}}</div>
                <div class="card">
                    
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="arts">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form id="updateUserForm" action="/admin/assignrole/{{adminExists._id}}"
                                            method="post" enctype="application/x-www-form-urlencoded">
                                            <div class="form-group">
                                                <div class="row">

                                                    <div class="col-md-4">
                                                        <label>Email</label>
                                                        <input type="text" class="form-control" name="email"
                                                            value="{{adminExists.email}}"
                                                            oninput="this.value = this.value.toLowerCase()">
                                                    <p id="emailP" style="color: red !important;"></p>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label>subscription Access</label>
                                                        <select name="status" class="form-control">
                                                            {{#each Roles}}
                                                            <option value="{{this._id}}"
                                                             {{#ifEquals this._id ../adminExists.role._id}}selected{{/ifEquals}}>
                                                                {{this.roleName}}</option>
                                                                {{/each}}
                                                        </select>
                                                    </div>
                                                     <div class="col-md-4">
                                                        <label>Change Password</label>
                                                        <div class="input-group">
                                                            <input type="password" class="form-control" id="password" name="password"
                                                                placeholder="Enter Password"  pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z\d])[A-Za-z\d\S]{8,14}$"
                                                                title="Password must be 8-14 characters, with at least one uppercase letter, one lowercase letter, one number, and one special character. No spaces allowed."
                                                            >
                                                            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                                                <i class="fa fa-eye" id="toggleEye"></i>
                                                            </button>
                                                        </div>
                                                            {{!-- disabled value="{{adminExists.phoneNumber}}"> --}}
                                                </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" id="modeel"
                                                class="saveButton btn btn-primary col-md-4 offset-md-4 btn-block d-flex justify-content-center ">Update</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="winners">
                               
                                <div class="col-sm-12">
                                    <ol class="float-sm-right">
                                        <button href="" id="" data-bs-toggle="modal" data-bs-target="#addModal"
                                            style="background-color: #4A3AFF; color:white; border:none; border-radius:5px; width: 180px; height: 40px; "><i
                                                class="fa-solid fa-plus"></i> Add Batch</button>
                                    </ol>
                                </div>
                               
                            
                            </div>
                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    <script>
    function togglePassword() {
        var passwordInput = document.getElementById("password");
        var toggleIcon = document.getElementById("toggleEye");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleIcon.classList.remove("fa-eye");
            toggleIcon.classList.add("fa-eye-slash");
        } else {
            passwordInput.type = "password";
            toggleIcon.classList.remove("fa-eye-slash");
            toggleIcon.classList.add("fa-eye");
        }
    }

     function changeButtonState() {
    var submitButton = document.getElementById('updateBtn');
    submitButton.textContent = 'Updating...';
    submitButton.disabled = true;
  }
</script>


